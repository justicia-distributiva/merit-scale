  journal = {Social Justice Research},
  keywords = {Anthropology,Czech Republic,Distributive Justice,Egalitarianism,Meritocracy,Personality and Social Psychology,Philosophy,Political Science; general,Social Policy,Social stratification,Sociology; general,Value change},
  language = {en},
