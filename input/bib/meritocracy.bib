@article{Kanngiesser2012YoungChildrenConsider,
  title = {Young {{Children Consider Merit}} When {{Sharing Resources}} with {{Others}}},
  author = {Kanngiesser, Patricia and Warneken, Felix},
  year = {2012},
  month = aug,
  volume = {7},
  pages = {e43979},
  issn = {1932-6203},
